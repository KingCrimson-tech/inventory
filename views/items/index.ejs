<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container">
        <div class="page-header">
            <h1><%= title %></h1>
            <a href="/items/create" class="btn">Add New Item</a>
        </div>

        <div class="items-grid">
            <% items.forEach(item => { %>
                <div class="item-card">
                    <% if (item.image_url) { %>
                        <img src="<%= item.image_url %>" alt="<%= item.name %>">
                    <% } %>
                    <h3><a href="/items/<%= item.id %>"><%= item.name %></a></h3>
                    <p class="category"><a href="/categories/<%= item.category_id %>"><%= item.category_name %></a></p>
                    <p class="brand"><%= item.brand %></p>
                    <p class="price">$<%= item.price %></p>
                    <p class="quantity">Stock: <%= item.quantity %></p>
                    <div class="card-actions">
                        <a href="/items/<%= item.id %>/edit" class="btn-small">Edit</a>
                        <form action="/items/<%= item.id %>/delete" method="POST" style="display:inline;">
                            <button type="submit" class="btn-small btn-danger" onclick="return confirm('Delete this item?')">Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>