<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container">
        <div class="page-header">
            <h1><%= title %></h1>
            <a href="/categories/create" class="btn">Add New Category</a>
        </div>

        <div class="categories-grid">
            <% categories.forEach(category => { %>
                <div class="category-card">
                    <h2><a href="/categories/<%= category.id %>"><%= category.name %></a></h2>
                    <p><%= category.description %></p>
                    <div class="card-actions">
                        <a href="/categories/<%= category.id %>/edit" class="btn-small">Edit</a>
                        <form action="/categories/<%= category.id %>/delete" method="POST" style="display:inline;">
                            <button type="submit" class="btn-small btn-danger" onclick="return confirm('Are you sure? This will delete all items in this category.')">Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>