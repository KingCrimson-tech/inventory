<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="container">
        <div class="page-header">
            <div>
                <h1><%= category.name %></h1>
                <p><%= category.description %></p>
            </div>
            <div>
                <a href="/categories/<%= category.id %>/edit" class="btn">Edit Category</a>
                <form action="/categories/<%= category.id %>/delete" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this category and all its items?')">Delete</button>
                </form>
            </div>
        </div>

        <h2>Items in this category</h2>
        
        <% if (items.length === 0) { %>
            <p>No items in this category yet. <a href="/items/create">Add one!</a></p>
        <% } else { %>
            <div class="items-grid">
                <% items.forEach(item => { %>
                    <div class="item-card">
                        <h3><a href="/items/<%= item.id %>"><%= item.name %></a></h3>
                        <p class="brand"><%= item.brand %></p>
                        <p class="price">$<%= item.price %></p>
                        <p class="quantity">Stock: <%= item.quantity %></p>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>